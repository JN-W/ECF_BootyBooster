{% extends 'base.html.twig' %}

{% block title %}Listing partenaires{% endblock %}

{% block body %}

    <div class=" row ">
        {# menuCommun is the left col in display #}
        {{ include('partial/_menuCommun.html.twig') }}

        {# Therefore the following must be in a col also #}

        <div class="col">
            <div class="row text-center">
                <h1>Liste des partenaires</h1>
            </div>
            {#-----------------------------#}
            <div class="row">
                <table class="table .table-hover">
                    <thead>
                    <tr>
                        {#                        <th scope="col">Partner</th>#}
                        <th scope="col">Nom</th>
                        {% if app.user and is_granted('ROLE_USER')  %}
                        <th scope="col">Statut</th>
                        <th scope="col">Edition</th>
                        {% endif %}
                        <th scope="col">Description</th>
                        <th scope="col">Structures</th>
                        <th scope="col">Services souscrits par le partenaire</th>

                    </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    {% for partner in partners %}

                        <tr>
                            <th scope="row">{{ partner.name }}</th>
                            {% if app.user and is_granted('ROLE_USER')  %}
                                {# Modifier le ROLE_USER en ROLE_FRANCHISE#}
                                <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" {{ (partner.isActive) ? 'checked' : '' }} data-id="{{ partner.id }}">
                                    {# <label class="form-check-label" for="flexSwitchCheckDefault">Activer / DÃ©sactiver </label>#}
                                </div>
                            </td>
                                <td>
                                    <a href="{{path('app_partner_update', {'id': partner.id})}}" class="btn btn-warning m-md-2"><i class="bi bi-pen"></i></a>
                                    <a href="{{path('app_partner_delete', {'id': partner.id})}}" class="btn btn-danger m-md-2"><i class="bi bi-trash3"></i></a>
                                </td>
                            {% endif %}
                            <td>{{ partner.description }}</td>
                            <td>
                                <ul class="list-group list-group-flush">
                                    {%  for key, structure in partner.structures %}
                                        <li class="list-group-item">{{ partner.structures | slice(key, 1)| join(', ') }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <ul class="list-group list-group-flush">
                                    {%  for key, service in partner.service %}
                                        <li class="list-group-item">{{ partner.service | slice(key, 1)| join(', ') }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>





            {#-----------------------------#}
        </div>
    </div>
{% endblock %}
